<?xml version="1.0"?>
<project name="Copy Music">

	<import file="common_targets.xml" />
	<import file="common_variables.xml" />

	<target name="Copy Music Projects" depends="Prepare" description="Copy music project files">
		<copyProjectFiles project="Campaign_Music" subdirectory="music" />
		<copyProjectFiles project="Campaign_Music_Impl" subdirectory="music" />
	</target>

	<target name="Copy Music Thirdparty" depends="Prepare" description="Copy third party packages required exclusively for music database">
		<copy todir="${dist_lib}/music">
			<fileset dir="../${thirdpartyDir}/Database/">
				<include name="**/*.jar" />
			</fileset>
			<fileset dir="../${thirdpartyDir}/Multimedia/">
				<include name="**/*.jar" />
			</fileset>
		</copy>
	</target>
</project>